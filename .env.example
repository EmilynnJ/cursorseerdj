# ============================================================================
# SOULSEER PRODUCTION ENVIRONMENT VARIABLES
# Copy to .env and fill in actual values
# ============================================================================

# Django
DEBUG=False
SECRET_KEY=your-secret-key-min-50-chars-change-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
DJANGO_LOG_LEVEL=INFO

# Database (Neon PostgreSQL)
# Option 1: Direct DATABASE_URL
DATABASE_URL=postgresql://user:password@host:5432/soulseer?sslmode=require

# Option 2: Individual Postgres settings (if DATABASE_URL not set)
PGHOST=pg-xxx.neon.tech
PGDATABASE=soulseer
PGUSER=soulseer_user
PGPASSWORD=your-secure-password
PGPORT=5432
PGSSLMODE=require

# Redis (for Celery broker)
REDIS_URL=redis://:password@redis-host:6379/0

# ============================================================================
# AUTH0 (OAuth2 + JWT)
# ============================================================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.soulseer.com
AUTH0_APP_ID=your-app-id
AUTH0_CLIENT_SECRET=your-client-secret

# ============================================================================
# AGORA (RTC + RTM)
# ============================================================================
AGORA_APP_ID=your-agora-app-id
AGORA_SECURITY_CERTIFICATE=your-agora-certificate
AGORA_CHAT_APP_ID=your-chat-app-id
AGORA_CHAT_WEBSOCKET_ADDRESS=wss://api.hyphenate.io
AGORA_CHAT_REST_API=https://a1.hyphenate.io

# ============================================================================
# STRIPE (Payments + Webhooks)
# ============================================================================
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here
STRIPE_WEBHOOK_SIGNING_SECRET=whsec_your_signing_secret

# ============================================================================
# AWS/R2 (Digital Delivery + Signed URLs)
# ============================================================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET=soulseer-content
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_CUSTOM_DOMAIN=https://cdn.soulseer.com

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================
SENTRY_DSN=https://your-key@sentry.io/project-id

# ============================================================================
# EMAIL (Optional: for notifications)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.your_sendgrid_key
DEFAULT_FROM_EMAIL=noreply@soulseer.com

# ============================================================================
# DEPLOYMENT (Heroku/Railway/Render)
# ============================================================================
ENVIRONMENT=production
PORT=8000

# Stripe
STRIPE_SECRET_KEY=sk_xxx
STRIPE_PUBLISHABLE_KEY=pk_xxx
STRIPE_WEBHOOK_SIGNING_SECRET=whsec_xxx

# R2 / S3 (optional for digital delivery)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=

# Sentry (optional)
SENTRY_DSN=
